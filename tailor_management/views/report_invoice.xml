<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="external_layout_standard" inherit_id="web.external_layout_standard">
<!--            <xpath expr="//div[hasclass('pt-5')]" position="replace">-->
<!--            </xpath>-->
            <xpath expr="//img" position="attributes">
                <attribute name="style">max-height: 105px;</attribute>
            </xpath>
        </template>
        <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="//t[@t-set='information_block']" position="replace"/>
            <xpath expr="//t[@t-set='address']" position="replace">
                <div class="row" style="margin-bottom: 5px;">
                    <div class="col-7">
                        <t t-if="o.partner_id">
                            <h2>Customer</h2>
                            <div style="font-size: 16px; font-weight: 400; margin: 0;" t-if="o.partner_id">
<!--                                <strong>Name:</strong>-->
                                <t t-esc="o.partner_id.name"/>
                                <t t-foreach="o.child_partner_ids" t-as="child_partner">
                                    <br/><t t-esc="child_partner.name"/><br/>
                                </t>
                            </div>
                            <div t-if="o.partner_id.phone" style="margin: 2px 0;">
                                <strong>Phone:</strong>
                                <t t-esc="o.partner_id.phone"/>
                            </div>
                            <div t-if="o.partner_id.email" style="margin: 2px 0;">
                                <strong>Email:</strong>
                                <t t-esc="o.partner_id.email"/>
                            </div>
                            <t t-if="o.partner_id.street or o.partner_id.street2 or o.partner_id.city or o.partner_id.state_id or o.partner_id.country_id or o.partner_id.zip">
                                <strong>Address:</strong>
                                <span t-if="o.partner_id.street" style="margin: 2px 0;">
                                    <t t-esc="o.partner_id.street"/>
                                </span>
                                <br/>
                                <span t-if="o.partner_id.street2" style="margin: 2px 0;">
                                    <t t-esc="o.partner_id.street2"/>
                                </span>
                                <span style="margin: 2px 0;"><t t-if="o.partner_id.city" t-esc="o.partner_id.city"/>,
                                    <t t-if="o.partner_id.state_id" t-esc="o.partner_id.state_id.name"/>
                                </span>
                                <span tstyle="margin: 2px 0;"><t t-if="o.partner_id.country_id"
                                                                 t-esc="o.partner_id.country_id.name"/>,
                                    <t t-if="o.partner_id.zip" t-esc="o.partner_id.zip"/>
                                </span>
                            </t>
                        </t>
                    </div>
                    <div class="col-5">

                    <h2>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                        <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </h2>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@name='origin']" position="replace"/>

            <xpath expr="//table[@name='invoice_line_table']" position="replace">
                <table class="table table-sm o_main_table" name="invoice_line_table">
                    <thead>
                        <tr>
                            <th name="th_description" class="text-left font-weight-bold">
                                <span>Description</span>
                            </th>
                            <th name="th_quantity" class="text-right font-weight-bold">
                                <span>Quantity</span>
                            </th>
                            <th name="th_priceunit"
                                t-attf-class="text-right font-weight-bold {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Unit Price</span>
                            </th>
                            <th name="th_price_unit" t-if="display_discount"
                                t-attf-class="text-right font-weight-bold {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Disc.%</span>
                            </th>
                            <th name="th_taxes"
                                t-attf-class="text-left font-weight-bold {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Taxes</span>
                            </th>
                            <th name="th_subtotal" class="text-right font-weight-bold">
                                <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0" />
                        <t t-set="lines"
                           t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)" />
                        <t t-set="is_pack" t-value="0" />
                        <t t-foreach="lines" t-as="line">
                            <t t-if="line.product_id.pack_ok">
                                <t t-set="is_pack" t-value="1" />
                            </t>
                        </t>
                        <t t-foreach="lines" t-as="line">
                            <t t-if="is_pack == 1">
                                <t t-if="line.product_id.pack_ok">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                       groups="account.group_show_line_subtotals_tax_excluded" />
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                       groups="account.group_show_line_subtotals_tax_included" />

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                            <td name="account_invoice_line_name">
                                                <span t-field="line.name" t-options="{'widget': 'text'}" />
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quantity" t-options="{'widget': 'integer'}" />
                                            </td>
                                            <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.price_unit" />
                                            </td>
                                            <td t-if="display_discount"
                                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.discount" />
                                            </td>
                                            <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"
                                                      id="line_tax_ids" />
                                            </td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-field="line.price_subtotal"
                                                      groups="account.group_show_line_subtotals_tax_excluded" />
                                                <span class="text-nowrap" t-field="line.price_total"
                                                      groups="account.group_show_line_subtotals_tax_included" />
                                            </td>
                                        </t>
                                        <!-- Handle sections and notes -->
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}" />
                                            </td>
                                            <t t-set="current_section" t-value="line" />
                                            <t t-set="current_subtotal" t-value="0" />
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}" />
                                            </td>
                                        </t>
                                    </tr>
                                    <!-- Subtotal logic -->
                                </t>
                            </t>
                        </t>
                    </tbody>
                </table>


