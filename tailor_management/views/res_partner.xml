<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="partner_view_tailor" model="ir.ui.view">
            <field name="name">partner.view.tailor</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="is_vip_customer"/>
                </xpath>
                <xpath expr="//notebook/page[@name='sales_purchases']/group/group[@name='purchase']"
                       position="inside">
                    <field name="customer"/>
                    <field name="vendor"/>
                    <field name="owner"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Measurements" name="measurements">
                        <group>
                            <group>
                                <field name="bust_cup_size"/>
                                <field name="neck"/>
                                <field name="accross_front"/>
                                <field name="bust_fullest_part"/>
                                <field name="under_bust"/>
                                <field name="waist_cric"/>
                                <field name="hp_cric"/>
                                <field name="thigh_cric"/>
                                <field name="upper_arm_cric"/>
                                <field name="total_length"/>

                            </group>
                            <group>
                                <field name="elbow_cric"/>
                                <field name="wrist_cric"/>
                                <field name="shoulder_to_waist"/>
                                <field name="shoulder_to_floor"/>
                                <field name="shoulder_to_shoulder"/>
                                <field name="back_neck_to_waist"/>
                                <field name="across_back"/>
                                <field name="inner_arm_length"/>
                                <field name="ankle"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form//group[1]" position="after">
                    <notebook>
                        <page string="Measurements" name="measurements">
                            <group>
                                <group>
                                    <field name="bust_cup_size"/>
                                    <field name="neck"/>
                                    <field name="accross_front"/>
                                    <field name="bust_fullest_part"/>
                                    <field name="under_bust"/>
                                    <field name="waist_cric"/>
                                    <field name="hp_cric"/>
                                    <field name="thigh_cric"/>
                                    <field name="upper_arm_cric"/>
                                    <field name="total_length"/>

                                </group>
                                <group>
                                    <field name="elbow_cric"/>
                                    <field name="wrist_cric"/>
                                    <field name="shoulder_to_waist"/>
                                    <field name="shoulder_to_floor"/>
                                    <field name="shoulder_to_shoulder"/>
                                    <field name="back_neck_to_waist"/>
                                    <field name="across_back"/>
                                    <field name="inner_arm_length"/>
                                    <field name="ankle"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

        <!--        to update contact menu-->
        <!--        owners-->

        <record id="action_contacts_owner" model="ir.actions.act_window">
            <field name="name">Owners</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,list,form,activity</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="context">{'default_is_company': True}</field>
            <field name="domain">[('owner','=', True)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Contact in your address book
                </p>
                <p>
                    Odoo helps you track all activities related to your contacts.
                </p>
            </field>
        </record>
