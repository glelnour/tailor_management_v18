<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_lead_view_form_tailor" model="ir.ui.view">
            <field name="name">crm.lead.form.tailor</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="advance_payment" string="Advance Payment"
                            type="object" class="btn-primary" invisible="lead_payment_count == 1"/>
                </xpath>
                <xpath expr="//button[@name='action_sale_quotations_new']" position="replace">
                    <button name="create_invoice_wizard" string="Create Invoice"
                            type="object" class="btn-primary"
                            invisible="not is_vip_customer and not lead_payment_count &gt; 0"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-dollar">
                        <div class="o_stat_info">
                            <field name="lead_payment_count" class="o_stat_info"/>
                            <span class="o_stat_text">Payments</span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//field[@name='email_from']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
              <xpath expr="//label[@for='phone']" position="attributes">
                <attribute name="invisible">1</attribute>
              </xpath>
                <xpath expr="//div[field[@name='phone']]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@id='probability']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='opportunity_partner']/field[@name='partner_id']" position="after">
                    <field name="phone" widget="phone"/>
                    <field name="child_partner_ids" widget="many2many_tags"/>
                    <field name="is_vip_customer"/>
                    <field name="product_id" options="{'no_create': 1}" invisible="1"/>
                    <field name="product_ids" options="{'no_create': 1}" required="True" widget="many2many_tags" domain="[('is_main_product','=', True)]"/>
                    <field name="design_method_id" options="{'no_create': 1}" required="False" invisible="1"/>
                    <field name="prova_date"/>
                    <field name="expected_delivery" />
                    <field name="actual_delivery"/>
                    <field name="invoice_id" readonly="1"/>
                </xpath>
<!--                <xpath expr="//field[@name='phone']" position="after">-->
<!--                    <field name="design_method_id" options="{'no_create': 1}" required="True"/>-->
<!--                    <field name="expected_delivery"/>-->
<!--                    <field name="actual_delivery"/>-->
<!--                </xpath>-->
                <xpath expr="//page[@name='internal_notes']" position="before">
                    <field name="total_customers" invisible="1"/>
                    <page string="Measurements" name="measurements">
                        <group string="Measurement 1">
                            <group>
                                <field name="bust_cup_size"/>
                                <field name="neck"/>
                                <field name="accross_front"/>
                                <field name="bust_fullest_part"/>
                                <field name="under_bust"/>
                                <field name="waist_cric"/>
                                <field name="hp_cric"/>
                                <field name="thigh_cric"/>
                                <field name="upper_arm_cric"/>
                                <field name="total_length"/>

                            </group>
                            <group>
                                <field name="elbow_cric"/>
                                <field name="wrist_cric"/>
                                <field name="shoulder_to_waist"/>
                                <field name="shoulder_to_floor"/>
                                <field name="shoulder_to_shoulder"/>
                                <field name="back_neck_to_waist"/>
                                <field name="across_back"/>
                                <field name="inner_arm_length"/>
                                <field name="ankle"/>
                            </group>
                        </group>
                        <group string="Measurement 2" invisible="not child_partner_ids">
                            <group>
                                <field name="bust_cup_size_1"/>
                                <field name="neck_1"/>
                                <field name="accross_front_1"/>
                                <field name="bust_fullest_part_1"/>
                                <field name="under_bust_1"/>
                                <field name="waist_cric_1"/>
                                <field name="hp_cric_1"/>
                                <field name="thigh_cric_1"/>
                                <field name="upper_arm_cric_1"/>
                                <field name="total_length_1"/>

                            </group>
                            <group>
                                <field name="elbow_cric_1"/>
                                <field name="wrist_cric_1"/>
                                <field name="shoulder_to_waist_1"/>
                                <field name="shoulder_to_floor_1"/>
                                <field name="shoulder_to_shoulder_1"/>
                                <field name="back_neck_to_waist_1"/>
                                <field name="across_back_1"/>
                                <field name="inner_arm_length_1"/>
                                <field name="ankle_1"/>
                            </group>
                        </group>
                        <group string="Measurement 3" invisible="total_customers &lt; 2">
                            <group>
                                <field name="bust_cup_size_2"/>
                                <field name="neck_2"/>
                                <field name="accross_front_2"/>
                                <field name="bust_fullest_part_2"/>
                                <field name="under_bust_2"/>
                                <field name="waist_cric_2"/>
                                <field name="hp_cric_2"/>
                                <field name="thigh_cric_2"/>
                                <field name="upper_arm_cric_2"/>
                                <field name="total_length_2"/>

                            </group>
                            <group>
                                <field name="elbow_cric_2"/>
                                <field name="wrist_cric_2"/>
                                <field name="shoulder_to_waist_2"/>
                                <field name="shoulder_to_floor_2"/>
                                <field name="shoulder_to_shoulder_2"/>
                                <field name="back_neck_to_waist_2"/>
                                <field name="across_back_2"/>
                                <field name="inner_arm_length_2"/>
                                <field name="ankle_2"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//page[@name='lead']" position="after">
                    <page string="Product Pack">
                        <field name="pack_line_ids" widget="one2many">
                            <list string="History" widget="section_and_note_one2many" editable="bottom">
                                <control>
                                    <create name="add_line_control" string="Add a line" context="{'default_display_type': 'line_product'}"/>
                                    <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                </control>
                                <field name="name" widget="section_and_note_text" column_invisible="1"/>
                                <field name="section_description" column_invisible="0"/>
                                <field name="display_type" column_invisible="1"/>
                                <field name="product_id" column_invisible="0"/>
                                <field name="quantity" force_save="1" invisible="display_type == 'line_section'" required="display_type != 'line_section'"/>
                                <field name="uom_id" invisible="display_type == 'line_section'"  required="display_type != 'line_section'"/>
                                <field name="list_price" readonly="0" force_save="1" invisible="display_type == 'line_section'"  required="display_type != 'line_section'"/>
                                <field name="cost" invisible="display_type == 'line_section'"  required="display_type != 'line_section'"/>
                                <field name="total_cost" invisible="display_type == 'line_section'"  required="display_type != 'line_section'"/>
                            </list>
<!--                            <form>-->
<!--                                <group invisible="display_type != 'line_section'">-->
<!--                                    <field name="section_description" required="display_type == 'line_section'" invisible="display_type != 'line_section'"/>-->
<!--                                </group>-->
<!--                                <group invisible="display_type == 'line_section'">-->
<!--                                    <group>-->
<!--                                        <field name="display_type" invisible="1"/>-->
<!--                                        <field name="section_description" required="display_type == 'line_section'" invisible="display_type == 'line_section'"/>-->
<!--                                        <field name="product_id" invisible="display_type == 'line_section'" required="display_type != 'line_section'"/>-->
<!--                                        <field name="quantity" force_save="1" invisible="display_type == 'line_section'"/>-->
<!--                                        <field name="uom_id" invisible="display_type == 'line_section'"/>-->
<!--                                        <field name="list_price" readonly="0" force_save="1" invisible="display_type == 'line_section'"/>-->
<!--                                        <field name="cost" invisible="1"/>-->
<!--                                        <field name="total_cost" invisible="1"/>-->
<!--                                    </group>-->
<!--                                </group>-->
<!--                            </form>-->
                        </field>
                    </page>
                </xpath>
                <field name="tag_ids" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="team_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="date_deadline" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//div[2]" position="before">
                    <field name="ind_comp" widget="radio"/>
                </xpath>
                <xpath expr="//div[2]/label[1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
<!--                <xpath expr="//div[2]/label[2]" position="attributes">-->
<!--                    <attribute name="invisible">1</attribute>-->
<!--                </xpath>-->
                <xpath expr="//div[2]/h1" position="attributes">
                    <attribute name="invisible">ind_comp == 'individual'</attribute>
                </xpath>
                <xpath expr="//div[2]/h2/div[1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
<!--                <xpath expr="//div[2]/h2/div[4]" position="attributes">-->
<!--                    <attribute name="invisible">1</attribute>-->
<!--                </xpath>-->
            </field>
        </record>
        <!--        to hide link in the checklist-->
        <record id="crm_lead_check_history_view_form" model="ir.ui.view">
            <field name="name">crm.lead.check.history.form.link</field>
            <field name="model">crm.lead.check.history</field>
            <field name="inherit_id" ref="crm_check_approve_limiter.crm_lead_check_history_view_form"/>
            <field name="arch" type="xml">
                <field name="link" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>
        <record id="crm_lead_check_history_view_tree" model="ir.ui.view">
            <field name="name">crm.lead.check.history.form.link</field>
            <field name="model">crm.lead.check.history</field>
            <field name="inherit_id" ref="crm_check_approve_limiter.crm_lead_check_history_view_list"/>
            <field name="arch" type="xml">
                <field name="link" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>
        <record id="crm_lead_view_form_i" model="ir.ui.view">
            <field name="name">crm.lead.form.link</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm_check_approve_limiter.crm_lead_view_form_i"/>
            <field name="arch" type="xml">
                <field name="is_crm_manager" invisible="1"/>
                <field name="link" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>
        <!--        to update kanban view create-->
        <record model="ir.ui.view" id="crm_case_kanban_view_leads_inherit">
            <field name="name">CRM - Leads Kanban Inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
            <field name="arch" type="xml">
                <kanban position="attributes">
                    <attribute name="quick_create">false</attribute>
                </kanban>
            </field>
        </record>

<!--        to make tree view first-->
        <record id="crm.crm_lead_action_pipeline_view_kanban" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="crm.crm_case_kanban_view_leads"/>
            <field name="act_window_id" ref="crm.crm_lead_action_pipeline"/>
        </record>

        <record id="crm.crm_lead_action_pipeline_view_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="act_window_id" ref="crm.crm_lead_action_pipeline"/>
        </record>


    </data>
</odoo>