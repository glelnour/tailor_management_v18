<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="tailor_design_method_tree" model="ir.ui.view">
            <field name="name">tailor.design.method.tree</field>
            <field name="model">tailor.design.method</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="crm_stage_ids" widget="many2many_tags"/>
                </list>
            </field>
        </record>

        <record id="tailor_design_method_form" model="ir.ui.view">
            <field name="name">tailor.design.method.form</field>
            <field name="model">tailor.design.method</field>
            <field name="arch" type="xml">
                <form string="Tailor Design Methods">
                    <group>
                        <field name="name"/>
                        <field name="crm_stage_ids" widget="many2many_tags"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_tailor_design_method" model="ir.actions.act_window">
            <field name="name">Tailor Design Methods</field>
            <field name="res_model">tailor.design.method</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem
                id="menu_action_tailor_design_method"
                action="action_tailor_design_method"
                parent="crm.crm_menu_root"
                sequence="21" active="False"/>
    </data>
</odoo>
