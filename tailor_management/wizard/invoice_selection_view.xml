<odoo>
    <record id="view_invoice_confirmation_wizard" model="ir.ui.view">
        <field name="name">invoice.confirmation.wizard.form</field>
        <field name="model">invoice.confirmation.wizard</field>
        <field name="arch" type="xml">
            <form string="Choose Action">
                <group>
                    <label for="type_invoice_selection" string="Do you want to create a normal invoice or an invoice with payment link?"/>
                    <field name="type_invoice_selection" widget="radio"/>
                </group>
                <footer>
                    <button name="action_create_invoice" type="object" string="Create Invoice" class="btn-primary"/>
                    <button string="Cancel" class="btn-link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
