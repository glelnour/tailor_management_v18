<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="crm_check_approve_manager" model="res.groups">
            <field name="name">CRM Checklist Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>
        <record id="crm_check_list_user" model="res.groups">
            <field name="name">CRM Checklist User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="checklist_rule_user_access" model="ir.rule">
            <field name="name">User can read assigned records</field>
            <field name="model_id" ref="model_crm_lead_check_history"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('crm_check_approve_limiter.crm_check_list_user'))]"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_unlink" eval="0"/>
            <field name="perm_read" eval="1"/>
        </record>
         <record id="checklist_rule_manager" model="ir.rule">
            <field name="name">Manager can see all records</field>
            <field name="model_id" ref="model_crm_lead_check_history"/>
             <field name="domain_force">[(1, '=', 1)]</field>
             <field name="groups" eval="[(4, ref('crm_check_approve_limiter.crm_check_approve_manager'))]"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_unlink" eval="1"/>
            <field name="perm_read" eval="1"/>
        </record>
    </data>
</odoo>