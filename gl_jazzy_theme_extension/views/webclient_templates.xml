<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Override favicon to use square company logo and provide multiple sizes -->
    <template id="gl_favicon" inherit_id="web.layout">
        <xpath expr="//link[@rel='shortcut icon']" position="attributes">
            <attribute name="t-att-href">'/gl_jazzy_theme_extension/static/description/favicon.png'</attribute>
        </xpath>
        <!-- Ensure theme-color is our brand green at first paint -->
        <xpath expr="//head" position="inside">
            <meta name="theme-color" content="#72C63F"/>
        </xpath>
        <xpath expr="//head/link[@rel='shortcut icon']" position="after">
            <link rel="icon" type="image/png" sizes="16x16" href="/gl_jazzy_theme_extension/static/description/favicon_square.png"/>
            <link rel="icon" type="image/png" sizes="32x32" href="/gl_jazzy_theme_extension/static/description/favicon_square.png"/>
            <link rel="icon" type="image/png" sizes="48x48" href="/gl_jazzy_theme_extension/static/description/favicon_square.png"/>
            <link rel="icon" type="image/png" sizes="64x64" href="/gl_jazzy_theme_extension/static/description/favicon_square.png"/>
            <link rel="icon" type="image/png" sizes="192x192" href="/gl_jazzy_theme_extension/static/description/favicon_square.png"/>
            <link rel="apple-touch-icon" sizes="180x180" href="/gl_jazzy_theme_extension/static/description/favicon_square.png"/>
        </xpath>
    </template>
    <template id="gl_login_layout" inherit_id="web.login_layout">
        <xpath expr="//div[hasclass('container')]" position="replace">
            <div class="container py-5 gl-login-page">
                <div class="row d-flex align-items-center justify-content-center" style="min-height: 70vh; margin-top: 62px;">
                    <div class="col-lg-6">
                        <div t-attf-class="card border-0 mx-auto bg-100 {{login_card_classes}} o_database_list"
                             style="max-width: 300px;">
                            <div class="card-body">
                                <t t-out="0"/>
                                <!--                                <div class="text-center small mt-4 pt-3 border-top" t-if="not disable_footer">-->
                                <!--                                    <t t-if="not disable_database_manager">-->
                                <!--                                        <a class="border-end pe-2 me-1" href="/web/database/manager">Manage Databases</a>-->
                                <!--                                    </t>-->
                                <!--                                    <a href="https://www.odoo.com?utm_source=db&amp;utm_medium=auth" target="_blank">Powered by <span>Odoo</span></a>-->
                                <!--                                </div>-->
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div>
                            <img src="/gl_jazzy_theme_extension/static/description/logo_big.png"
                                 style="height: 500px; width:500px;"/>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="gl_login" inherit_id="web.login">
        <xpath expr="//form" position="before">
            <h2 style="font-family: sans-serif; font-size: 24px; font-weight: 600; color: #212529; margin-bottom: 10px;">
                Sign In to your account
            </h2>
            <div class="mb-5">
                <span style="font-family: sans-serif; font-size: 14px; color: #6c757d; line-height: 1.6; font-weight: 400;">
                    Welcome to Green Lines, Access the kindly by signing in with your account credentials.
                </span>
            </div>
        </xpath>
        <xpath expr="//label[@for='login']" position="replace"/>
        <xpath expr="//label[@for='password']" position="replace"/>
        <xpath expr="//button" position="replace">
            <button type="submit"
                    style="background-color:#72C63F; color:#fff; border:none; padding:10px 20px; border-radius:30px; font-size:16px; font-weight:600; cursor:pointer;">
                Sign In
            </button>
        </xpath>
    </template>
</odoo>