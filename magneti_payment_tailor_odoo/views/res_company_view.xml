<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_res_company_form_view" model="ir.ui.view">
        <field name="name">inherit.res.company.form.view</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Finserv Credentials">
                    <group>
                        <group>
                            <field name="fiserv_store_id"/>
                            <field name="fiserv_shared_secret" password="True"/>
                            <field name="fiserv_api_key" password="True"/>
<!--                            <field name="fiserv_api_secret" password="True"/>-->
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
